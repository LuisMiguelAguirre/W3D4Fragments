<LinearLayout
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.w3d4fragments.DetailsArtistFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:src="@drawable/annakendrick164008421"
        android:id="@+id/image_view_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Name"
        android:id="@+id/text_view_details_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Description"
        android:id="@+id/text_view_details_description_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
